# 应用程序配置

################################################################################
# 服务配置
################################################################################

# 服务端口
PORT=8080

# 环境: development, production
ENV=development

# 日志级别: debug, info, warn, error
LOG_LEVEL=info

################################################################################
# 数据库配置
################################################################################

# MySQL 主机
DB_HOST=localhost

# MySQL 端口
DB_PORT=3306

# MySQL 用户名
DB_USER=root

# MySQL 密码
DB_PASSWORD=

# MySQL 数据库名
DB_NAME=tgo_call

################################################################################
# Redis 配置
################################################################################

# Redis 主机
REDIS_HOST=localhost

# Redis 端口
REDIS_PORT=6379

# Redis 密码（可选）
REDIS_PASSWORD=

# Redis 数据库编号
REDIS_DB=0

################################################################################
# LiveKit 配置
################################################################################

# LiveKit 服务器地址
LIVEKIT_URL=http://localhost:7880

# LiveKit API 密钥
LIVEKIT_API_KEY=devkey

# LiveKit API 密钥密码
LIVEKIT_API_SECRET=secret

################################################################################
# Webhook 配置（可选）
################################################################################

# 启用 Webhook
WEBHOOK_ENABLED=false

# Webhook 密钥
WEBHOOK_SECRET=

